{
  "name": "manifest-web-client",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "wasm:build": "cd ../sim-core && wasm-pack build --target web --out-dir ../web-client/src/wasm",
    "wasm:dev": "cd ../sim-core && wasm-pack build --target web --dev --out-dir ../web-client/src/wasm",
    "start": "npm run wasm:build && npm run dev"
  },
  "dependencies": {
    "@pixi/react": "^8.0.5",
    "pixi.js": "^8.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-top-level-await": "^1.4.0",
    "vite-plugin-wasm": "^3.4.0"
  }
}
